<%=render "shared/navbaramelioration" %>


<!-- Content
================================================== -->
<div class="fs-container">

	<div class="fs-inner-container content">
		<div class="fs-content">

			<!-- Search -->
			<section class="search">

				<div class="row">
					<div class="col-md-12">

							<!-- Row With Forms -->
							<div class="row with-forms">

								
								<!-- Filters -->
								<div class="col-fs-12">

									<!-- Panel Dropdown -->
									<div class="panel-dropdown wide">
										<a href="#">Filtres</a>
										<div class="panel-dropdown-content checkboxes">

											<!-- Checkboxes -->
											<div class="row">
												<div class="col-md-6">
													<input id="check-a" type="checkbox" name="check">
													<label for="check-a">Bâtiment avec ascenseur</label>

													<input id="check-b" type="checkbox" name="check">
													<label for="check-b">Machine à laver disponible</label>

													<input id="check-c" type="checkbox" name="check" >
													<label for="check-c">Wifi</label>
												</div>	

												<div class="col-md-6">
													<input id="check-d" type="checkbox" name="check">
													<label for="check-d">Chiens acceptés</label>

													<input id="check-e" type="checkbox" name="check">
													<label for="check-e">Ânes acceptés</label>
												</div>
											</div>
											
											<!-- Buttons -->
											<div class="panel-buttons">
												<button class="panel-cancel">Annuler</button>
												<button class="panel-apply">Appliquer</button>
											</div>

										</div>
									</div>
									<!-- Panel Dropdown / End -->
									
								</div>
								<!-- Filters / End -->
	
							</div>
							<!-- Row With Forms / End -->

					</div>
				</div>

			</section>
			<!-- Search / End -->


		<section class="listings-container margin-top-30">
			<!-- Sorting / Layout Switcher -->
			<div class="row fs-switcher">

				<div class="col-md-6">
					<!-- Showing Results -->
					<p class="showing-results"><%= @house_of_the_city.length %> résultats pour cette ville </p>
				</div>

			</div>


			<!-- Listings -->
			<div class="row fs-listings">
				<% @house_of_the_city.each do |house| %>
				<% @id_of_the_house = house.fetch('id') %>
				<% house_name = house.fetch('name') %>
                <% x = 0 %>

				<!-- Listing Item -->
			    <div class="col-lg-12 col-md-12">
			    	<%= link_to dodo_path(@id_of_the_house) do %>
					<div class="listing-item-container list-layout" data-marker-id="1">
								
						<div class="listing-item">

							<!-- Image -->
							<div class="listing-item-image">
								<%= image_tag "home.jpg" %>
								<span class="tag">Chambre & Dortoir</span>
							</div>
							
							<!-- Content -->
							<div class="listing-item-content">
								<div class="listing-item-inner">
								<h3><%= house_name %></h3>
									<div class="star-rating" data-rating="2.0">
									</div>
								</div>

								<span class="like-icon"></span>
								<div class="listing-item-details">A partir de <%=price_of_the_lowest_room_of_the_home(@id_of_the_house)%>€/personne</div>
							</div>
							
						</div>
                        
                        <% x = x + 1 %>	
					</div>
                    <% end%>
		
				</div>
	        <% end%>

			</div>
			<!-- Listings Container / End -->

            <!-- Pagination Container -->
			<div class="row fs-listings">
				<div class="col-md-12">

					<!-- Pagination -->
					<div class="clearfix"></div>
					<div class="row">
						<div class="col-md-12">
							<!-- Pagination -->
							<div class="pagination-container margin-top-15 margin-bottom-40">
							</div>
						</div>
					</div>
					<div class="clearfix"></div>
					<!-- Pagination / End -->
					
					<!-- Copyrights -->
					<div class="copyrights margin-top-0">© 2018 Fait avec amour par Colin, Alexandre, Thomas , Steve et Côme <3 </div>

				</div>
			</div>
			<!-- Pagination Container / End -->
		</section>

		</div>
	</div>
	<div class="fs-inner-container map-fixed">

		<!-- Map -->
		<div id="map-container">
		    <div id="map" data-map-zoom="9" data-map-scroll="true">
		        <!-- map goes here -->
		    </div>
		</div>

	</div>
</div>


</div>
<!-- Wrapper / End -->


